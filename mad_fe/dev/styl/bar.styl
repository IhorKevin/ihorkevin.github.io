.bar
    display inline-block
    size(298px, 70px)
    line-height 70px
    vertical-align middle
    text-align center
    uppercase()
    background-color $base-color
    color white
    text-decoration none
    font-size 34px
    font-weight 200

.bar_button
    size(374px, 74px)
    line-height 74px
    background-color $special-color
    border 1px solid white
    font-weight bold
    cursor pointer

    &:hover
        background-color saturate($special-color, 20%)

.bar_small
    size(200px, 46px)
    line-height 46px
