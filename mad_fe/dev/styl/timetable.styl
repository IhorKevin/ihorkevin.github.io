.timetable
    background-color white

.timetable__frame
    border 1px solid black
    overflow: hidden

.timetable__cell
    width 84%
    margin 0 auto

.timetable__title
    margin 30px 0
    font-size 30px
    uppercase()
    font-weight 200
    text-align center

.timetable__list
    padding 50px 0

.timetable__item
    position relative
    padding-left 90px
    line-height 50px
    margin-bottom 24px
    opacity 0


.timetable__icon
    absolute left top
    display block
    size(50px, 50px)
    box-sizing border-box
    border 1px solid #888888
    border-radius 50%
    background url($icon-sprite) 0 0 no-repeat, white

    &:before
        content ''
        absolute bottom -25px left (50px/2)
        size(1px, 24px)
        background-color #888888

    &:after
        content ''
        absolute right -25px top (50px/2)
        size(24px, 1px)
        background-color #888888

.timetable__icon_last
    &:before
        display none

.timetable__icon_microphone
    background-position 0 0
.timetable__icon_reg
    background-position -50px 0
.timetable__icon_coffee
    background-position -100px 0
.timetable__icon_man
    background-position -150px 0
.timetable__icon_apple
    background-position -200px 0
.timetable__icon_dinner
    background-position -250px 0
.timetable__icon_atom
    background-position -300px 0
.timetable__icon_android
    background-position -350px 0
.timetable__icon_yoga
    background-position -400px 0
.timetable__icon_dj
    background-position -450px 0

.timetable__text
    white-space nowrap

@keyframes opacity-in
    0%
        opacity 0
    100%
        opacity 1

for i in 0..12
    .timetable__item:nth-child({i})
        animation opacity-in .5s forwards
        animation-delay (.1s * i)